{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mediafiles list</h1>

    <table>
        <thead>
            <tr>
                <th>Path</th>
                <th>Folder</th>
                <th>Type</th>
                <th>Format</th>
                <th>Title</th>
                <th>Album</th>
                <th>Artist</th>
                <th>Albumartist</th>
                <th>Discnumber</th>
                <th>Tracknumber</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Bitrate</th>
                <th>Variablebitrate</th>
                <th>Durationseconds</th>
                <th>Filesize</th>
                <th>Width</th>
                <th>Height</th>
                <th>Coverartpath</th>
                <th>Parentpath</th>
                <th>Playcount</th>
                <th>Lastplayed</th>
                <th>Comment</th>
                <th>Created</th>
                <th>Changed</th>
                <th>Lastscanned</th>
                <th>Childrenlastupdated</th>
                <th>Present</th>
                <th>Version</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mediaFile in mediaFiles %}
            <tr>
                <td><a href="{{ path('mediafile_show', { 'id': mediaFile.id }) }}">{{ mediaFile.path }}</a></td>
                <td>{{ mediaFile.folder }}</td>
                <td>{{ mediaFile.type }}</td>
                <td>{{ mediaFile.format }}</td>
                <td>{{ mediaFile.title }}</td>
                <td>{{ mediaFile.album }}</td>
                <td>{{ mediaFile.artist }}</td>
                <td>{{ mediaFile.albumArtist }}</td>
                <td>{{ mediaFile.discNumber }}</td>
                <td>{{ mediaFile.trackNumber }}</td>
                <td>{{ mediaFile.year }}</td>
                <td>{{ mediaFile.genre }}</td>
                <td>{{ mediaFile.bitRate }}</td>
                <td>{% if mediaFile.variableBitRate %}Yes{% else %}No{% endif %}</td>
                <td>{{ mediaFile.durationSeconds }}</td>
                <td>{{ mediaFile.fileSize }}</td>
                <td>{{ mediaFile.width }}</td>
                <td>{{ mediaFile.height }}</td>
                <td>{{ mediaFile.coverArtPath }}</td>
                <td>{{ mediaFile.parentPath }}</td>
                <td>{{ mediaFile.playCount }}</td>
                <td>{% if mediaFile.lastPlayed %}{{ mediaFile.lastPlayed|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mediaFile.comment }}</td>
                <td>{% if mediaFile.created %}{{ mediaFile.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if mediaFile.changed %}{{ mediaFile.changed|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if mediaFile.lastScanned %}{{ mediaFile.lastScanned|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if mediaFile.childrenLastUpdated %}{{ mediaFile.childrenLastUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if mediaFile.present %}Yes{% else %}No{% endif %}</td>
                <td>{{ mediaFile.version }}</td>
                <td>{{ mediaFile.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mediafile_show', { 'id': mediaFile.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}

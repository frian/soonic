{% extends 'base.html.twig' %}

{% block body %}
    <h1>Internetradio</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ internetRadio.name }}</td>
            </tr>
            <tr>
                <th>Streamurl</th>
                <td>{{ internetRadio.streamUrl }}</td>
            </tr>
            <tr>
                <th>Homepageurl</th>
                <td>{{ internetRadio.homepageUrl }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if internetRadio.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Changed</th>
                <td>{% if internetRadio.changed %}{{ internetRadio.changed|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ internetRadio.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('radio_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('radio_edit', { 'id': internetRadio.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% set placeholder = 'search.placeholder'|trans %}
{% set searchLabel = 'search'|trans %}

{% if search_form is defined %}
{{ form_start(search_form, { attr: { id: 'search-form' }, action: path('search'), method: 'POST' }) }}
{% else %}
<form id="search-form" name="search" method="post" action="{{ path('search') }}">
{% endif %}

    <div class="form-element-container">
        {% if search_form is defined %}
            {{ form_widget(search_form.keyword, {
                attr: {
                    id: 'form-keyword',
                    class: 'filter-input',
                    placeholder: placeholder
                }
            }) }}
        {% else %}
            <input type="text" id="form-keyword" name="search[keyword]" required="required" placeholder="{{ placeholder }}" class="filter-input">
            <input type="hidden" name="search[_token]" value="{{ csrf_token('form') }}">
        {% endif %}
        <button class="input-reset" type="reset" aria-label="Reset search" title="Reset search"></button>
    </div>

    <button id="search-button" type="submit" name="submit" class="button" title="{{ searchLabel }}" aria-label="{{ searchLabel }}">
        <span class="material-icons" aria-hidden="true">search</span>
    </button>

{% if search_form is defined %}
{{ form_end(search_form) }}
{% else %}
</form>
{% endif %}

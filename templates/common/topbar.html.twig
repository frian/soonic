<section class="topbar">

    <div class="logo"><img alt="Soonic" src="/weblogo-grey.png"></div>

    {% if app.request.attributes.get('_route') == 'library' %}
    <div id="player-container">
        <i class="icon-to-start"></i><i id="play-pause-button" class="icon-play"></i><i class="icon-to-end"></i>

        <audio id="player" preload="none">
            <source id="audio-source" src="" type="audio/mpeg"/>
        </audio>

        <div class="time-info-container">
            <div class="time-info">
                <span id="current-time">00:00 /</span>
                <span id="duration"> 00:00</span>
            </div>
            <div class="progress-bar-container">
                <div class="progressbar">
                    <div class="progress-indicator"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="song-info">
        <span id="song-title" class="song-title"></span>
        <span id="song-artist" class="song-artist"></span>
    </div>
    {% endif %}

    <nav class="topbar-nav" id="top-bar-nav">
        <ul class="top-nav">
            <li id="navigation-search-form">
                {{ render(controller( 'App\\Controller\\SearchController::showSearch' )) }}
            </li>
            <li id="navigation-library">
                <a id="library-button" href="{{ path('library') }}" data-title="artists" title="{{ 'artists'|trans }}"><span class="material-icons">people</span></a>
            </li>
            <li id="navigation-random">
                <a id="random-button" href="{{ path('random_songs') }}" data-title="songs.loadrandom" title="{{ 'songs.loadrandom'|trans }}"><span class="material-icons">shuffle</span></a>
            </li>
            <li id="navigation-albums">
                <a id="albums-button"  href="{{ path('album_index') }}" data-title="albums" title="{{ 'albums'|trans }}"><span class="material-icons">album</span></a>
            </li>
            <li id="navigation-radios">
                <a id="radio-button" href="{{ path('radio_index') }}" data-title="radios" title="{{ 'radios'|trans }}"><span class="material-icons">radio</span></a>
            </li>
            <li id="navigation-radio-new">
                <a id="radio-new-button" href="{{ path('radio_new') }}" data-title="radio.new" title="{{ 'radio.new'|trans }}"><span class="material-icons">radio</span><span class="material-icons radio-add">add</span></a>
            </li>
            <!-- <li id="navigation-back-to-radio-index">
                <a id="back-to-radio-index-button" href="{{ path('radio_index') }}">{{ 'back'|trans }}</a>
            </li> -->
            <li id="navigation-settings">
                {% if app.request.attributes.get('_route') != 'settings_index' %}
                    <a id="settings-button" data-title="settings" title="{{ 'settings'|trans }}" href="{{ path('settings_index') }}">
                        <span class="material-icons">settings</span>
                    </a>
                {% endif %}
            </li>
        </ul>
    </nav>

    <button type="button" class="hamburger hamburger--elastic">
        <span class="hamburger-box">
            <span class="hamburger-inner"></span>
        </span>
    </button>

</section>

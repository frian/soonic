<section class="radio-new-view">
    <h1>{{ 'radio.new'|trans }}</h1>

    <form id="radio_save" action="{{ path('radio_new') }}" method="POST">

        <table class="form">
            <tr>
                <td>{{ form_label(form.name) }}</td>
                <td>{{ form_widget(form.name) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.streamUrl) }}</td>
                <td>{{ form_widget(form.streamUrl) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.homepageUrl) }}</td>
                <td>{{ form_widget(form.homepageUrl) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="button-row">
                    {{ include('common/_button_submit.html.twig', { label: 'create'|trans }) }}
                    {{ include('common/_button_link.html.twig', { href: path('radio_index'), label: 'back.tolist'|trans }) }}
                </td>
            </tr>
        </table>
        {{ form_widget(form._token) }}
    </form>
</section>

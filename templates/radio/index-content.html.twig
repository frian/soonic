<section id="radios" class="radios-view view">
    {% for radio in radios %}
        <section class="radio clearfix">
            <a
                class="radio-edit-link"
                href="{{ path('radio_edit', { id: radio.id }) }}"
                aria-label="{{ 'edit'|trans }}"
                title="{{ 'edit'|trans }}"
            >
                <span class="material-icons" aria-hidden="true">edit</span>
            </a>
            <div class="button-wrapper">
                <i class="icon-play radio-play" role="button" tabindex="0" aria-label="Play radio" title="Play radio"></i>
                <audio preload="none">
                    <source src="{{ radio.streamUrl }}" type="audio/mpeg"/>
                </audio>
            </div>
            <div class="radio-name">{{ radio.name }}</div>
            <div class="radio-url">
                {% if radio.homepageUrl %}
                    <a href="{{ radio.homepageUrl }}" target="_blank" rel="noopener noreferrer">{{ radio.homepageUrl }}</a>
                {% else %}
                    -
                {% endif %}
            </div>
        </section>
    {% else %}
        <section class="radio clearfix">
            <div class="radio-name">no radios found</div>
        </section>
    {% endfor %}

    {% if totalPages > 1 %}
        <nav class="radios-pagination" aria-label="Radios pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('radio_index', { page: currentPage - 1 }) }}" class="button" data-page="{{ currentPage - 1 }}">Previous</a>
            {% endif %}

            <span class="radios-pagination-current">{{ currentPage }}/{{ totalPages }}</span>

            {% if currentPage < totalPages %}
                <a href="{{ path('radio_index', { page: currentPage + 1 }) }}" class="button" data-page="{{ currentPage + 1 }}">Next</a>
            {% endif %}
        </nav>
    {% endif %}
</section>

{% apply spaceless %}
<div class="albums-view">
{% for album in albums %}
<div class="album-container" data-album-id="{{ album.id }}" data-artist="" data-album="{{ album.albumSlug }}">

    <div class="img-wrapper">
        <img class="lozad" data-src="{{ album.path }}/cover.jpg" alt="">
    </div>

    <div class="album-infos">
        <div class="album-info-album">
            {{ album.name }}
        </div>

        <div class="album-info-artist">
            {% if album.artists is defined %}
                    {% if album.artists|length > 1 %}
                        {{ 'Various' }}
                    {% else %}
                        {{ album.artists[0] }}
                    {% endif %}
            {% endif %}
        </div>
    </div>
</div>
{% else %}
no album found
{% endfor %}
</div>
{% endapply %}
